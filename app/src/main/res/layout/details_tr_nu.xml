<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--trainer and nutritionists details layout for user-->
    <TextView
        android:id="@+id/study6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/rating"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/study4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/study4"
        app:layout_constraintTop_toBottomOf="@+id/study4" />

    <TextView
        android:id="@+id/study7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/rating"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/study5"
        app:layout_constraintStart_toStartOf="@+id/study5"
        app:layout_constraintTop_toBottomOf="@+id/study5" />

    <TextView
        android:id="@+id/study"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/nutritionist"

        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/f_name_tr_nu"
        app:layout_constraintStart_toStartOf="@id/f_name_tr_nu"
        app:layout_constraintTop_toBottomOf="@+id/f_name_tr_nu" />

    <TextView
        android:id="@+id/study2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/institute"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/study1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/study1"
        app:layout_constraintTop_toBottomOf="@+id/study1" />

    <TextView
        android:id="@+id/study3"
        android:layout_width="134dp"
        android:layout_height="27dp"
        android:layout_marginTop="20dp"
        android:text="@string/abc_university"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/study"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintStart_toStartOf="@+id/study"
        app:layout_constraintTop_toBottomOf="@+id/study" />

    <include
        android:id="@+id/toolbar_tr_nu"
        layout="@layout/toolbar"

        />


